    "lib": ["es2015", "dom"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
